<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/wrapper_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/bg_rounded_rectangle"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimary"
                android:textSize="42sp"
                android:textStyle="bold"/>



            <ImageView
                android:id="@+id/display_tooth_image"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:background="@drawable/bg_rounded_rectangle"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
            />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"/>

            <RadioGroup
                android:id="@+id/radio_group_aspect_ratio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PERSON INFORMATION"
                    android:textAppearance="?android:textAppearanceSmall"/>


                <RadioButton
                    android:id="@+id/sex_male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textAppearance="?android:textAppearanceMedium"
                    tools:checked="true"/>

                <RadioButton
                    android:id="@+id/sex_female"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:id="@+id/text_view_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:text="Age: 12"
                    tools:text="Age: 12"/>

                <SeekBar
                    android:id="@+id/seekbar_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:progress="12"/>

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DENTAL HEALTH"
                android:textAppearance="?android:textAppearanceSmall"/>

            <CheckBox
                android:id="@+id/checkbox_changedtooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I've changed my tooth"
                android:textAppearance="?android:textAppearanceMedium"/>

            <CheckBox
                android:id="@+id/checkbox_loose_tooth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have a loose tooth"
                android:textAppearance="?android:textAppearanceMedium"/>

            <CheckBox
                android:id="@+id/checkbox_smoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I smoke"
                android:textAppearance="?android:textAppearanceMedium"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/colorPrimary"/>

            <RadioGroup
                android:id="@+id/radio_group_compression_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="TYPE of DENTAL PROBLEMS"
                    android:textAppearance="?android:textAppearanceSmall"/>

                <CheckBox
                    android:id="@+id/checkbox_Gingivalbleeding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gingival bleeding"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <CheckBox
                    android:id="@+id/checkbox_looseteeth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loose teeth"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <CheckBox
                    android:id="@+id/checkbox_mouthulcer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mouth ulcer"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <CheckBox
                    android:id="@+id/checkbox_periodontitis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Periodontitis"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <CheckBox
                    android:id="@+id/checkbox_missingteeth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Missing teeth"
                    android:textAppearance="?android:textAppearanceMedium"/>

            </RadioGroup>

            <Button
                android:id="@+id/button_crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Choose another picture"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button_send_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="SENT to SERVER"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>



        </LinearLayout>

    </FrameLayout>


</ScrollView>
